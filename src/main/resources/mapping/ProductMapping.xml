<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.javen.dao.IProductDao">
    <!-- 解决表名与字段不匹配 -->
    <!--<resultMap type="User" id="userResultMap">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="age" column="age"/>
    </resultMap>-->
    <select id="getProductById" resultType="Product" parameterType="int">
        SELECT * FROM product WHERE id = #{id}
    </select>
    <select id="getAllProducts" resultType="Product">
        SELECT * FROM product
    </select>
    <select id="addProduct" parameterType="Product">
        INSERT INTO product (name, price, number, remark, xremark, cid)
        VALUES (#{name},#{price},#{number},#{remark},#{xremark},#{cid})
    </select>
</mapper>